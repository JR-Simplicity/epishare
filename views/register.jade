extends layout

block content
  .container
    h1 Register Page
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="name", placeholder='Enter Name')
      .form-group
          input.form-control(type='text', name="email", placeholder='Enter Email Address')
      .form-group
          input.form-control(type='text', name="phone", placeholder='Enter Phone Number')
      .form-group
        input.form-control(type='password', name="password", placeholder='Enter Password')
      .form-group
          input.form-control(type='text', name="repassword", placeholder='Retype Password')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel